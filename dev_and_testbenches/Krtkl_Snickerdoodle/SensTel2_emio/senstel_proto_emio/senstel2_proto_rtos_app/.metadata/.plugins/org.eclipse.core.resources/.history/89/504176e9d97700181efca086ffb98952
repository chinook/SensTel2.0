//==============================================================================
// FUNCTION DEFINITIONS
//==============================================================================
void InitAppProfile(sAppTaskProfiles_t *AppProfiles)
{
	AppProfiles->idx = 0;
}

u8 AddTaskProfile(sAppTaskProfiles_t *AppProfiles, u8 *TaskId)
{
	sTaskProfile_t *tprof = &AppProfiles->TaskArray[AppProfiles->idx];
	u32 i;

	tprof->AvgLooptime = 0;
	tprof->LastDelta = 0;
	tprof->LoopCount = 0;
	tprof->MaxDelta = 0;
	tprof->MinDelta = 0;

	AppProfiles->idx++;

	return AppProfiles->idx;
}


void UpdateTaskProfile(sAppTaskProfiles_t *AppProfiles, u8 TaskIdx, u32 NewTimeDelta)
{
	AppProfiles->TaskArray[TaskIdx]

}
